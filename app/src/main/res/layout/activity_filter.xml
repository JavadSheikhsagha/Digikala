<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Filter.FilterActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/colorPrimary"
        >

        <ImageView
            android:id="@+id/img_filter_cart"
            android:layout_width="28dp"
            android:layout_height="28dp"
            app:srcCompat="@drawable/ic_shopping_cart_white_24dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"/>

        <ImageView
            android:layout_toRightOf="@+id/img_filter_cart"
            android:layout_width="28dp"
            android:layout_height="28dp"
            app:srcCompat="@drawable/ic_search_white_24dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="فیلتر محصولات"
            android:textColor="@color/colorWhite"
            android:textSize="14sp"
            android:layout_toLeftOf="@+id/img_filter_back"
            android:layout_marginRight="8dp"
            android:layout_centerVertical="true"/>

        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_centerVertical="true"
            app:srcCompat="@drawable/ic_arrow_forward_black_24dp"
            android:tint="@color/colorWhite"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:id="@+id/img_filter_back"
            />

    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rv_filter_product"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >



    </LinearLayout>

</LinearLayout>