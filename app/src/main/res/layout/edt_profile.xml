<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/rel_edtProfile_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/colorGrey200"
    android:foreground="?attr/selectableItemBackground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:src="@drawable/ic_arrow_forward_black_24dp"
        android:layout_alignParentRight="true"
        android:padding="10dp"
        android:id="@+id/img_edtProfile_menu"
        />

    <TextView
        android:id="@+id/txt_edtProfile_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="ویرایش پروفایل"
        android:layout_marginRight="4dp"
        android:layout_toLeftOf="@+id/img_edtProfile_menu"
        android:layout_centerVertical="true"
        android:textSize="14sp"
        />



</RelativeLayout>