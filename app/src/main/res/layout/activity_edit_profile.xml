<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorGrey200"
    tools:context=".EditProfile.EditProfile">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/colorPrimary"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="پروفایل"
            android:textColor="@color/colorWhite"
            android:textSize="16sp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/img_edtProfile_back"
            android:layout_marginRight="8dp"/>

        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            app:srcCompat="@drawable/ic_arrow_forward_black_24dp"
            android:tint="@color/colorWhite"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:id="@+id/img_edtProfile_back"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/colorGrey300"
        >
        <TextView
            android:id="@+id/txt_edtProfile_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="14dp"
            tools:text="javad Sheikhsagha"
            android:layout_marginTop="6dp"
            android:textSize="16sp"
            />

        <TextView
            android:id="@+id/txt_edtProfile_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sir.hxt@gmail.com"
            android:layout_below="@+id/txt_edtProfile_username"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"/>



    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_edtProfile"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>