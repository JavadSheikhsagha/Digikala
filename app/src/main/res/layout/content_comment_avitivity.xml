<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Comments.CommentAvitivity"
    tools:showIn="@layout/activity_comment">


    <TextView
        android:id="@+id/txt_comment_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:background="@color/colorGrey200"
        tools:text="گوشی موبایل galaxy s10"
        android:gravity="center"
        android:textSize="14sp"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_below="@+id/txt_comment_title"
        android:id="@+id/rv_comment_comments"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


</RelativeLayout>